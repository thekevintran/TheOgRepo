<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/modelAppleText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="77dp"
        android:layout_marginTop="125dp"
        android:text="Apple Logo Here"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/modelAppleText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/modelAppleText1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:text="Pick a Model:"
        android:textSize="24sp" />

    <Button
        android:id="@+id/buttonModelApple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go"
        android:layout_alignBaseline="@+id/modelAppleText2"
        android:layout_alignBottom="@+id/modelAppleText2"
        android:layout_toEndOf="@+id/radioGroupApple" />

    <RadioGroup
        android:id="@+id/radioGroupApple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonModelApple"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp">

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:checked="true"
            android:text='MacBook 15" 2017' />

        <RadioButton
            android:id="@+id/radioButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioButton1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:text='MacBook 13" 2017' />

        <RadioButton
            android:id="@+id/radioButton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioButton2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:text='MacBook 15" Late 2015' />

    </RadioGroup>


</RelativeLayout>